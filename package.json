{
  "name": "loyalty-cards-app",
  "version": "1.0.0",
  "description": "Повний веб-додаток для збереження карт лояльності",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js", 
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "security:test": "node security-test.js",
    "security:audit": "npm audit && npm audit fix",
    "security:check": "npm run security:audit && npm run security:test",
    "production:start": "NODE_ENV=production node server.js",
    "build": "echo 'Build completed'",
    "docker:build": "docker build -t loyalty-cards .",
    "docker:run": "docker run -p 2804:2804 loyalty-cards"
  },
  "keywords": [
    "loyalty",
    "cards",
    "pwa",
    "barcode",
    "qr-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-winston": "^4.2.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "speakeasy": "^2.0.0",
    "validator": "^13.11.0",
    "web-push": "^3.6.6",
    "winston": "^3.10.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
